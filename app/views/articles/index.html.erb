
<div class = "row">
  <div class = "col">
    <h1> Article list </h1>
    <p>
      <%= link_to 'Home',welcome_index_path, class: 'btn btn-lg btn-info' %>
      <%= link_to 'Create new article',new_article_path, class: 'btn btn-lg btn-success'%>
    </p>
    <table class = "table table-hover", style="Border:4px solid;">
      <tr>
        <th>Id</th>
        <th>Date</th>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
      <% @articles.each do |article| %>
      <tr>
        <td style="font-size:32px;"><%= article.id  %></td>
        <td><%= article.created_at %></td>
        <td><h3><%= article.title %></h3></td>
        <td><%= truncate(article.text, length: 60)  %></td>
        <td><%= link_to 'View',article_path(article), class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit',edit_article_path(article), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Delete',article_path(article),method: :Delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %></td>
      </tr>
      <%end%>
    </table>
  </div>
</div>
